uiTitle.BackgroundTransparency = 1
uiTitle.TextColor3 = Color3.new(1, 1, 1)
uiTitle.Font = Enum.Font.GothamBold
uiTitle.TextScaled = true

local function createButton(text, color, pos)
    local btn = Instance.new("TextButton", mainFrame)
    btn.Size = UDim2.new(0.9, 0, 0.2, 0)
    btn.Position = UDim2.new(0.05, 0, pos, 0)
    btn.BackgroundColor3 = color
    btn.Text = text
    btn.Font = Enum.Font.GothamBold
    btn.TextScaled = true
    btn.TextColor3 = Color3.new(1, 1, 1)
    Instance.new("UICorner", btn).CornerRadius = UDim.new(0, 8)
    return btn
end

local randomBtn = createButton("üé≤ Randomize Pets", Color3.fromRGB(0, 255, 255), 0.2)
local espBtn = createButton("üëÅ ESP: ON", Color3.fromRGB(255, 100, 120), 0.42)
